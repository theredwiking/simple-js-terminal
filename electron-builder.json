{
    "$schema": "http://json.schemastore.org/electron-builder",
    "appId": "com.theredwiking.simpleterminal",
    "directories": {
        "output": "build"
    },
    "linux": {
        "category": "TerminalEmulator",
        "target": [
            {
                "target": "deb",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            {
                "target": "AppImage",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            {
                "target": "rpm",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ]
    },
    "win": {
        "target": [
            "nsis"
        ],
        "rfc3161TimeStampServer": "http://timestamp.comodoca.com"
    },
    "nsis": {
        "include": "build/win/installer.nsh",
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true
    },
    "deb": {
        "compression": "bzip2"
    }
}